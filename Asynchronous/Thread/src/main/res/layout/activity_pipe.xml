<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_message_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ONE"
        app:layout_constraintEnd_toStartOf="@id/bt_message_two"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_message_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TWO"
        app:layout_constraintEnd_toStartOf="@id/bt_message_three"
        app:layout_constraintStart_toEndOf="@id/bt_message_one"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_message_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THREE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bt_message_two"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
