<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_start_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Thread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_start_pipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Pipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_start_thread" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_start_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Memory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_start_pipe" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_start_memory_prevention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Memory Prevention"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_start_memory" />
</androidx.constraintlayout.widget.ConstraintLayout>
