<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space.layout.large"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_start_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반복되는 태스크 실행"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_start_resource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리소스 관련 태스크"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_start_repeat" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_start_chain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="태스크 연쇄"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_start_resource" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
