<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.github.jhamin0511.android.async.handlerthread.repeat.RepeatViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space.layout.large">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_repeat"
            style="@style/Example.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반복되는 태스크 실행"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space.widget.medium"
            android:text="@{vm.result}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_repeat"
            tools:text="RESULT" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space.widget.medium"
            android:onClickListener="@{() -> vm.bindClickSend()}"
            android:text="SEND"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClickListener="@{() -> vm.bindClickPost()}"
            android:text="POST"
            app:layout_constraintStart_toEndOf="@id/bt_send"
            app:layout_constraintTop_toTopOf="@id/bt_send" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
