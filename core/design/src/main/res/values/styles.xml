<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Item.Book.Title" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Item.Book.Author" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/material_dynamic_neutral60</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Item.Book.Publisher" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/material_dynamic_neutral60</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Item.Book.Division" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/material_dynamic_primary100</item>
        <item name="android:background">@drawable/bg_division_content</item>
        <item name="android:paddingStart">@dimen/space.widget.extra_small</item>
        <item name="android:paddingEnd">@dimen/space.widget.extra_small</item>
    </style>

    <style name="Item.Book.Content" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
